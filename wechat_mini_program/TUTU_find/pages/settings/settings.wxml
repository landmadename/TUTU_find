<!--pages/settings/settings.wxml-->
<view class='container'>
<view style='height:50rpx;'></view>

  <view class='card' style='padding-top:0rpx;padding-bottom:0rpx;'>
  <image src='/images/TUTU.jpg' mode='widthFix' style='width:630rpx;'></image>
  </view>
  <view style='height:50rpx;'></view>

  <view class='card'>
  <view class='title'>请填入服务商(或自己服务器的)域名</view>
  <l-input label="域名:" bind:linconfirm="set_domin" value='{{domin}}' width='630'/>
  </view>
  <view style='height:50rpx;'></view>

  <view class='card'>
  <view class='title'>请填入您的密钥</view>
  <l-textarea bind:linconfirm="set_skey" value='{{skey}}'/>
  <view style='height:30rpx;'></view>
  <l-button size="large" type='success' shape="semicircle" width="630" open-type='getUserInfo' bindgetuserinfo='use_wx_as_a_key'>用微信登录</l-button>
  </view>

  <view style='height:50rpx;'></view>
    
  <view class='card' style='padding-top:0rpx;padding-bottom:0rpx;'>
  <image src='/images/CZY.jpg' mode='widthFix' style='width:630rpx;'></image>
  </view>
  <view style='height:50rpx;'></view>

</view>